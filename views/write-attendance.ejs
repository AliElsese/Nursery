<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top">
        <div class="container d-flex align-items-center">

            <h1 class="logo ml-auto"><a href="/trainer-board">JUMP & JUMP</a></h1>
            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="index.html" class="logo mr-auto"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

            <nav class="nav-menu d-none d-lg-block">
                <ul>
                    <li><a href="/logout">تسجيل الخروج</a></li>
                </ul>
            </nav><!-- .nav-menu -->

        </div>
    </header><!-- End Header -->

    <!-- ======= Hero Section ======= -->
    <section id="hero" class="d-flex justify-content-center align-items-center">
        <div class="container position-relative" data-aos="zoom-in" data-aos-delay="100">
        </div>
    </section><!-- End Hero -->

    <div class="col-md-12 text-center mt-5">
        <h2 style="color: #111111;"> <%= student[0].studentname %> </h3>
        <div class="separator mb-4"></div>
    </div>


    <div class="content">
        <div class="news-table m-5">
    
            <form action="/addAttendance/<%= student[0].studentcourse %>" method="post" id="add_course">
                  
                <div class="row mt-3">
                    <div class="col-md-12 text-right">

                        <div class="row mb-2">
    
                            <div class="col-md-2 d-md-block"></div>
    
                            <!-- Text input-->
                            <div class="form-group col-md-8">
                                <label class="control-label" for="course_name">تاريخ الحضور</label>  
                                
                                <input class="form-control" name="attendancedate" type="date">
                            </div>

                            <div class="col-md-2 d-md-block"></div>
    
                        </div>
    
                        <div class="row mb-2">
    
                            <div class="col-md-2 d-md-block"></div>
    
                            <!-- Text input-->
                            <div class="form-group col-md-8">
                                <label class="control-label" for="course_name">الحضور</label>  
                                <input type="hidden" name="studentid" value="<%= student[0].studentid %>">
                                <select name="attendance" id="" class="form-control">
                                    <option value="حاضر">
                                        حاضر
                                    </option>
                                    <option value="غائب">
                                        غائب
                                    </option>
                                </select>
                            </div>

                            <div class="col-md-2 d-md-block"></div>
    
                        </div>
    
                        <div class="row mb-2">
                            <div class="col-md-12 text-center">
                                <div class="form-group">
                                    <button type="submit" class="get-started-btn">  حفظ </button>
                                </div>
                            </div>
                        </div>
    
                    </div>
                </div>
    
            </form>
    
        </div>
    </div>


